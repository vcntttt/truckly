{
  "name": "truckly",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "client:dev": "bun --cwd apps/frontend dev",
    "server:dev": "bun apps/server/index.ts",
    "dev": "concurrently --names \"web,server\" --prefix-colors \"green,magenta\" \"bun run client:dev\" \"bun run server:dev\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.4",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "pg": "^8.16.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {}
}
